<div class="container ml-3">
  <h1>New Task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <p> Title: </p>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <p> Details: </p>
      <%= f.text_field :details %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default btn-primary"%>
    </div>
  <% end %>
  <div id="back-to-list">
      <br><%= link_to "Back to list", tasks_path %>
  </div>
</div>
