<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container ml-3">
  <div class="d-flex align-items-center justify-content-between py-3">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary btn-lg" %>
  </div>
  <p class="alert alert-info"><%= @task.details %></p>
  <div class="pt-4">
    <% if @task.completed %>
        <i class="fa fa-check-square-o"> This task is completed</i>
    <% else %>
        <i class="fa fa-square-o">This task is not completed yet</i>
    <% end %>
  </div>
  <div id="back-to-list">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
